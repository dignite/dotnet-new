{
  "$schema": "http://json.schemastore.org/template",
  "author": "Me",
  "classifications": ["Common", "Code"],
  "identity": "ExampleTemplate.NameCasing",
  "name": "Example templates: name casing",
  "shortName": "namecasing",
  "tags": {
    "language": "md",
    "type": "item"
  },
  "symbols": {
    "PascalCasedName": {
      "datatype": "text",
      "defaultValue": "AdatumCorporation",
      "replaces": "OriginalPascalCasedName",
      "type": "parameter"
    },
    "PascalCasedNameAsSnakeCaseReplacement": {
      "datatype": "text",
      "description": "The name in snake_case",
      "fileRename": "pascal_cased_name_as_snake_case",
      "replaces": "pascal_cased_name_as_snake_case",
      "type": "derived",
      "valueSource": "PascalCasedName",
      "valueTransform": "snake_case"
    },
    "PascalCasedNameAsKebabCaseReplacement": {
      "datatype": "text",
      "description": "The name in kebab-case",
      "fileRename": "pascal-cased-name-as-kebab-case",
      "replaces": "pascal-cased-name-as-kebab-case",
      "type": "derived",
      "valueSource": "PascalCasedName",
      "valueTransform": "kebab-case"
    },
    "PascalCasedNameAsPascalCaseReplacement": {
      "datatype": "text",
      "description": "The name in PascalCase",
      "fileRename": "PascalCasedNameAsPascalCase",
      "replaces": "PascalCasedNameAsPascalCase",
      "type": "derived",
      "valueSource": "PascalCasedName",
      "valueTransform": "PascalCase"
    },
    "SnakeCasedName": {
      "datatype": "text",
      "defaultValue": "lovely_corporation",
      "replaces": "OriginalSnakeCasedName",
      "type": "parameter"
    },
    "SnakeCasedNameAsSnakeCaseReplacement": {
      "datatype": "text",
      "description": "The name in snake_case",
      "fileRename": "snake_cased_name_as_snake_case",
      "replaces": "snake_cased_name_as_snake_case",
      "type": "derived",
      "valueSource": "SnakeCasedName",
      "valueTransform": "snake_case"
    },
    "SnakeCasedNameAsKebabCaseReplacement": {
      "datatype": "text",
      "description": "The name in kebab-case",
      "fileRename": "snake-cased-name-as-kebab-case",
      "replaces": "snake-cased-name-as-kebab-case",
      "type": "derived",
      "valueSource": "SnakeCasedName",
      "valueTransform": "kebab-case"
    },
    "SnakeCasedNameAsPascalCaseReplacement": {
      "datatype": "text",
      "description": "The name in PascalCase",
      "fileRename": "SnakeCasedNameAsPascalCase",
      "replaces": "SnakeCasedNameAsPascalCase",
      "type": "derived",
      "valueSource": "SnakeCasedName",
      "valueTransform": "PascalCase"
    },
    "KebabCasedName": {
      "datatype": "text",
      "defaultValue": "excellent-kebab",
      "replaces": "OriginalKebabCasedName",
      "type": "parameter"
    },
    "KebabCasedNameAsSnakeCaseReplacement": {
      "datatype": "text",
      "description": "The name in snake_case",
      "fileRename": "kebab_cased_name_as_snake_case",
      "replaces": "kebab_cased_name_as_snake_case",
      "type": "derived",
      "valueSource": "KebabCasedName",
      "valueTransform": "snake_case"
    },
    "KebabCasedNameAsKebabCaseReplacement": {
      "datatype": "text",
      "description": "The name in kebab-case",
      "fileRename": "kebab-cased-name-as-kebab-case",
      "replaces": "kebab-cased-name-as-kebab-case",
      "type": "derived",
      "valueSource": "KebabCasedName",
      "valueTransform": "kebab-case"
    },
    "KebabCasedNameAsPascalCaseReplacement": {
      "datatype": "text",
      "description": "The name in PascalCase",
      "fileRename": "KebabCasedNameAsPascalCase",
      "replaces": "KebabCasedNameAsPascalCase",
      "type": "derived",
      "valueSource": "KebabCasedName",
      "valueTransform": "PascalCase"
    }
  },
  "forms": {
    "snake_case": {
      "identifier": "chain",
      "description": "Converts the name to snake_case. Can handle snake_case, kebab-case, and PascalCase input.",
      "steps": [
        "underscoreBetweenLowerCaseAndUpperCaseLetter",
        "hyphensToUnderscores",
        "lowerCase"
      ]
    },
    "kebab-case": {
      "identifier": "chain",
      "description": "Converts the name to kebab-case. Can handle snake_case, kebab-case, and PascalCase input.",
      "steps": [
        "hyphenBetweenLowerCaseAndUpperCaseLetter",
        "underscoresToHyphens",
        "lowerCase"
      ]
    },
    "PascalCase": {
      "identifier": "chain",
      "description": "Converts the name to PascalCase. Can handle snake_case, kebab-case, and PascalCase input.",
      "steps": ["firstUpperCase", "separatorLowerCaseToUpperCase"]
    },
    "underscoreBetweenLowerCaseAndUpperCaseLetter": {
      "identifier": "replace",
      "pattern": "([a-z])([A-Z])",
      "replacement": "$1_$2"
    },
    "hyphenBetweenLowerCaseAndUpperCaseLetter": {
      "identifier": "replace",
      "pattern": "([a-z])([A-Z])",
      "replacement": "$1-$2"
    },
    "underscoresToHyphens": {
      "identifier": "replace",
      "pattern": "_",
      "replacement": "-"
    },
    "hyphensToUnderscores": {
      "identifier": "replace",
      "pattern": "-",
      "replacement": "_"
    },
    "separatorLowerCaseToUpperCase": {
      "identifier": "chain",
      "steps": [
        "separatorAToUpperCase",
        "separatorBToUpperCase",
        "separatorCToUpperCase",
        "separatorDToUpperCase",
        "separatorEToUpperCase",
        "separatorFToUpperCase",
        "separatorGToUpperCase",
        "separatorHToUpperCase",
        "separatorIToUpperCase",
        "separatorJToUpperCase",
        "separatorKToUpperCase",
        "separatorLToUpperCase",
        "separatorMToUpperCase",
        "separatorNToUpperCase",
        "separatorOToUpperCase",
        "separatorPToUpperCase",
        "separatorQToUpperCase",
        "separatorRToUpperCase",
        "separatorSToUpperCase",
        "separatorTToUpperCase",
        "separatorUToUpperCase",
        "separatorVToUpperCase",
        "separatorWToUpperCase",
        "separatorXToUpperCase",
        "separatorYToUpperCase",
        "separatorZToUpperCase"
      ]
    },
    "separatorAToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]a",
      "replacement": "A"
    },
    "separatorBToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]b",
      "replacement": "B"
    },
    "separatorCToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]c",
      "replacement": "C"
    },
    "separatorDToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]d",
      "replacement": "D"
    },
    "separatorEToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]e",
      "replacement": "E"
    },
    "separatorFToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]f",
      "replacement": "F"
    },
    "separatorGToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]g",
      "replacement": "G"
    },
    "separatorHToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]h",
      "replacement": "H"
    },
    "separatorIToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]i",
      "replacement": "I"
    },
    "separatorJToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]j",
      "replacement": "J"
    },
    "separatorKToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]k",
      "replacement": "K"
    },
    "separatorLToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]l",
      "replacement": "L"
    },
    "separatorMToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]m",
      "replacement": "M"
    },
    "separatorNToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]n",
      "replacement": "N"
    },
    "separatorOToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]o",
      "replacement": "O"
    },
    "separatorPToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]p",
      "replacement": "P"
    },
    "separatorQToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]q",
      "replacement": "Q"
    },
    "separatorRToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]r",
      "replacement": "R"
    },
    "separatorSToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]s",
      "replacement": "S"
    },
    "separatorTToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]t",
      "replacement": "T"
    },
    "separatorUToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]u",
      "replacement": "U"
    },
    "separatorVToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]v",
      "replacement": "V"
    },
    "separatorWToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]w",
      "replacement": "W"
    },
    "separatorXToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]x",
      "replacement": "X"
    },
    "separatorYToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]y",
      "replacement": "Y"
    },
    "separatorZToUpperCase": {
      "identifier": "replace",
      "pattern": "[-_]z",
      "replacement": "Z"
    }
  }
}
