{
  "$schema": "http://json.schemastore.org/template",
  "author": "Me",
  "classifications": ["Common", "Code"],
  "identity": "ExampleTemplate.NameCasing",
  "name": "Example templates: name casing",
  "shortName": "namecasing",
  "tags": {
    "language": "md",
    "type": "item"
  },
  "symbols": {
    "Name": {
      "datatype": "text",
      "defaultValue": "AdatumCorporation",
      "description": "The name to case in different casing styles",
      "replaces": "OriginalName",
      "type": "parameter"
    },
    "NameAsSnakeCase": {
      "datatype": "text",
      "description": "The name in snake_case",
      "fileRename": "name_as_snake_case",
      "replaces": "name_as_snake_case",
      "type": "derived",
      "valueSource": "Name",
      "valueTransform": "snake_cased"
    },
    "NameAsKebabCase": {
      "datatype": "text",
      "description": "The name in kebab-case",
      "fileRename": "name-as-kebab-case",
      "replaces": "name-as-kebab-case",
      "type": "derived",
      "valueSource": "Name",
      "valueTransform": "kebab-cased"
    }
  },
  "forms": {
    "snake_cased": {
        "identifier": "chain",
        "steps": ["underscoreBetweenLowercaseAndUpperCaseLetter", "lowerCase"]
    },
    "kebab-cased": {
        "identifier": "chain",
        "steps": ["hyphenBetweenLowercaseAndUpperCaseLetter", "lowerCase"]
    },
    "underscoreBetweenLowercaseAndUpperCaseLetter": {
      "identifier": "replace",
      "pattern": "([a-z])([A-Z])",
      "replacement": "$1_$2"
    },
    "hyphenBetweenLowercaseAndUpperCaseLetter": {
        "identifier": "replace",
        "pattern": "([a-z])([A-Z])",
        "replacement": "$1-$2"
    },
    "lowerCased": {
        "identifier": "lowerCase"
    }    
  }
}
