{
  "$schema": "http://json.schemastore.org/template",
  "author": "Me",
  "classifications": ["Common", "Code"],
  "identity": "ExampleTemplate.NameCasing",
  "name": "Example templates: name casing",
  "shortName": "namecasing",
  "tags": {
    "language": "md",
    "type": "item"
  },
  "symbols": {
    "PascalCasedName": {
      "datatype": "text",
      "defaultValue": "AdatumCorporation",
      "replaces": "OriginalPascalCasedName",
      "type": "parameter"
    },
    "PascalCasedNameAsSnakeCase": {
      "datatype": "text",
      "description": "The name in snake_case",
      "fileRename": "pascal_cased_name_as_snake_case",
      "replaces": "pascal_cased_name_as_snake_case",
      "type": "derived",
      "valueSource": "PascalCasedName",
      "valueTransform": "snake_cased"
    },
    "PascalCasedNameAsKebabCase": {
      "datatype": "text",
      "description": "The name in kebab-case",
      "fileRename": "pascal-cased-name-as-kebab-case",
      "replaces": "pascal-cased-name-as-kebab-case",
      "type": "derived",
      "valueSource": "PascalCasedName",
      "valueTransform": "kebab-cased"
    },
    "PascalCasedNameAsPascalCase": {
      "datatype": "text",
      "description": "The name in PascalCase",
      "fileRename": "PascalCasedNameAsPascalCase",
      "replaces": "PascalCasedNameAsPascalCase",
      "type": "derived",
      "valueSource": "PascalCasedName",
      "valueTransform": "PascalCased"
    }
  },
  "forms": {
    "snake_cased": {
      "identifier": "chain",
      "steps": ["underscoreBetweenLowercaseAndUpperCaseLetter", "lowerCase"]
    },
    "kebab-cased": {
      "identifier": "chain",
      "steps": ["hyphenBetweenLowercaseAndUpperCaseLetter", "lowerCase"]
    },
    "PascalCased": {
      "identifier": "chain",
      "steps": []
    },
    "underscoreBetweenLowercaseAndUpperCaseLetter": {
      "identifier": "replace",
      "pattern": "([a-z])([A-Z])",
      "replacement": "$1_$2"
    },
    "hyphenBetweenLowercaseAndUpperCaseLetter": {
        "identifier": "replace",
        "pattern": "([a-z])([A-Z])",
        "replacement": "$1-$2"
    },
    "underscoresToSpaces": {
      "identifier": "replace",
      "pattern": "_",
      "replacement": " "
    },
    "hyphensToSpaces": {
        "identifier": "replace",
        "pattern": "-",
        "replacement": " "
    },
    "removeSpaces": {
        "identifier": "replace",
        "pattern": " ",
        "replacement": ""
    },
    "titleCased": {
      "identifier": "titleCase"
    },
    "lowerCased": {
        "identifier": "lowerCase"
    }    
  }
}
